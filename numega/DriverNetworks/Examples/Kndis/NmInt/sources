# SOURCES for use with BUILD command

TARGETNAME=NMINT
TARGETPATH=obj
TARGETTYPE=DRIVER

!IF ("$(DDKBUILDENV)"=="chk") || ("$(DDKBUILDENV)"=="checked")
BUILDTYPE = CHECKED
!ELSE
BUILDTYPE = FREE
NTDEBUG=
!ENDIF

TARGETLIBS= $(DRIVERNETWORKS)\lib\*\$(BUILDTYPE)\kndis5mp.lib $(DDK_LIB_PATH)\ndis.lib

