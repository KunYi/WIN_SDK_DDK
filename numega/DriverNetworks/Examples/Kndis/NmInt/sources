BROWSER_INFO=1
RCNOFONTMAP=1

LINK_LIB_IGNORE=4210
MSC_OPTIMIZATION = /Oxs /Oi

INCLUDES=$(DRIVERNETWORKS)\include;\
	$(BASEDIR)\inc;\
	$(BASEDIR)\inc\ddk;\
	$(BASEDIR)\src\network\inc;\
	$(DRIVERWORKS)\include

SOURCES=nmintadap.cpp nmintbind.cpp nmintdrv.cpp nmintoids.cpp nmint.rc
