# SOURCES for use with BUILD command

TARGETNAME=USBNIC
TARGETPATH=obj
TARGETTYPE=DRIVER

!IF ("$(DDKBUILDENV)"=="chk") || ("$(DDKBUILDENV)"=="checked")
BUILDTYPE = CHECKED
!ELSE
BUILDTYPE = FREE
NTDEBUG=
!ENDIF

TARGETLIBS= $(DRIVERNETWORKS)\lib\*\$(BUILDTYPE)\kndis5mp.lib $(DDK_LIB_PATH)\ndis.lib \
	$(DRIVERWORKS)\lib\*\$(BUILDTYPE)\kndiswdm.lib \
	$(DDK_LIB_PATH)\usbd.lib

C_DEFINES= -DNDIS_MINIPORT_DRIVER -DNDIS50_MINIPORT -DBINARY_COMPATIBLE=1\
	-DNTVERSION='WDM' -DNDIS_WDM=1 -DUSE_KLOCKS=1
BROWSER_INFO=1
RCNOFONTMAP=1

LINK_LIB_IGNORE=4210
MSC_OPTIMIZATION = /Oxs /Oi

INCLUDES=$(DRIVERNETWORKS)\include;\
	$(BASEDIR)\inc;\
	$(BASEDIR)\inc\ddk;\
	$(BASEDIR)\src\network\inc;\
	$(DRIVERWORKS)\include

SOURCES=USBNICadap.cpp USBNICdrv.cpp USBNICoids.cpp USBNIC.rc

